{
    "name": "webignition/basil-loader",
    "description": "Loader for basil language files",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-loader",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilLoader\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilLoader\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR12",
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=7",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.2",
        "ext-mbstring": "*",
        "symfony/yaml": "^4.4|^5.0",
        "webignition/php-basil-context-aware-exception": ">=0.1,<1",
        "webignition/php-basil-model-provider": ">=0.4,<1",
        "webignition/basil-parser": ">=0.9,<1",
        "webignition/php-path-resolver": ">=0.1,<1",
        "webignition/basil-resolver": ">=0.2,<1",
        "webignition/basil-models": ">=0.19,<1",
        "webignition/basil-data-validator": ">=0.1,<1"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-mockery": "^0.12",
        "phpunit/phpunit": "~8.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "sort-packages": true
    }
}
