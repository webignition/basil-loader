{
    "name": "webignition/basil-loader",
    "description": "Loader for basil language files",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-loader",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilLoader\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilLoader\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-fixer-dry-run": "docker run --rm -i -w=/app -v ${PWD}:/app oskarstark/php-cs-fixer-ga:latest --allow-risky=yes --dry-run --verbose --show-progress none",
        "cs-fixer-fix": "docker run --rm -i -w=/app -v ${PWD}:/app oskarstark/php-cs-fixer-ga:latest --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "symfony/yaml": "^6.0",
        "webignition/basil-data-validator": ">=0.16,<1",
        "webignition/basil-model-provider": ">=0.9,<1",
        "webignition/basil-models": ">=0.58,<1",
        "webignition/basil-parser": "^1",
        "webignition/basil-resolver": ">=0.12,<1",
        "webignition/php-basil-context-aware-exception": ">=0.4,<1",
        "webignition/php-path-resolver": ">=0.3,<1"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.7",
        "phpstan/phpstan-mockery": "^1.1",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
